{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",

    // Local configs
    "github>kyteproject/gitops-homelab//.renovate//autoMerge.json5",
    "github>kyteproject/gitops-homelab//.renovate//clusters.json5",
    "github>kyteproject/gitops-homelab//.renovate//customManagers.json5",
    "github>kyteproject/gitops-homelab//.renovate//grafanaDashboards.json5",
    "github>kyteproject/gitops-homelab//.renovate//groups.json5",
    "github>kyteproject/gitops-homelab//.renovate//labels.json5",
    "github>kyteproject/gitops-homelab//.renovate//overrides.json5",
    "github>kyteproject/gitops-homelab//.renovate//semanticCommits.json5",


    ":automergeBranch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":gitSignOff",
    ":semanticCommits",
    ":timezone(Europe/London)",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  ignorePaths: [
    "**/*.sops.*",
    "**/archive/**",
    "**/resources/**"
  ],
  flux: {
    fileMatch: [
      "(^|/)infrastructure/controllers/.+\\.ya?ml$",
      "(^|/)clusters/.+\\.ya?ml$"
    ],
  },
  "helm-values": {
    fileMatch: [
      "(^|/)infrastructure/controllers/.+\\.ya?ml$",
      "(^|/)clusters/.+\\.ya?ml$"
    ],
  },
  kubernetes: {
    fileMatch: [
      "(^|/)infrastructure/controllers/.+\\.ya?ml$",
      "(^|/)clusters/.+\\.ya?ml$"
    ],
  },
}
